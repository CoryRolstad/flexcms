<%= form_for :phone_number, url: new_phone_number_path do |f| %>

    <% if @phone_number && @phone_number.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      Phone Number could not be saved due to the following <%= "error".pluralize(@phone_number.errors.count) %>:
      <ul>
        <% @phone_number.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
   
    <div class="input-group hidden">
      <span class="input-group-addon"><%= f.label :contact_id  %></span>
      <%= f.text_field :contact_id, :class => "form-control" %>
    </div>

    <div class="input-group">
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></span>
      <%= f.text_field :description, :class => "form-control", :placeholder => "Phone Type (Mobile, Home, Work, Fax)" %>
    </div>
  
    <div class="input-group">
      <span class="input-group-addon"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span></span>
      <%= f.telephone_field :number, :class => "form-control", :placeholder => "###-###-####" %>
    </div>

    <%= f.label :primary %><br />
    <%= f.check_box :primary %>
   
    <div class="input-group">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  <% end %>